---
interface Props {
    href:string;
    image?:string;
    title:string;
}
const { href, image, title } = Astro.props;

---
<a href={href} target="_blank" class="text-white transition-transform dark:bg-black300 dark:bg-opacity-6 duration-200 ease-in-out hover:scale-[1.05] origin-center flex flex-row items-center gap-4 p-4 rounded-lg bg-gray-900 shadow-md min-h-[88px]">
    { image && <img src={image} alt={title} class="w-14 h-14 rounded-lg flex-shrink-0" /> }
    <h3 class="text-xl tracking-wide overflow-wrap-anywhere">{title}</h3>
</a>