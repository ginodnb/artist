---
import Layout from '@layouts/Layout.astro';
// Header intentionally not included on this page because Hero handles top-of-page content
import { links, profile, event, ctas } from '@data/data';
import HeroEvent from '@components/HeroEvent.astro';
import LinkComponent from '@components/LinkComponent.astro';
---

<Layout className='text-gray-900 dark:text-white'>

		<!-- Header removed â€” HeroEvent replaces the top banner -->
		<main class="flex flex-col gap-2 pb-20">

			<!-- Hero Event section added before the lists -->
			<HeroEvent name={profile.name} bio={profile.bio} profileImage={profile.image} profileImage320={profile.image320} profileImage800={profile.image800} title={event.title} location={event.location} emoji={event.emoji} date={event.date} description={event.description} cta={ctas.tourDates} />

		{links.map((link) => (
			<section class="w-full max-w-[640px] mx-auto mt-4 rounded-lg">
				{ link.title ? <h2 class="text-3xl p-4 pb-0 mt-2 text-center font-bold">{link.title}</h2> : null }
				<ul class="flex flex-col gap-4 p-4">
					{link.items.map((item) => (
						<li>
							<LinkComponent href={item.href} image={item.image} title={item.title} />
						</li>
					))}
				</ul>
			</section>
		))}
	</main>

</Layout>
