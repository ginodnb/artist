---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import { links } from '@data/data';
---

<Layout className='text-gray-900 dark:text-white'>

	<Header />

	<main class="flex flex-col gap-2 mb-20">
		{links.map((link) => (
			<section class="w-full max-w-[640px] mx-auto mt-4 rounded-lg">
				{ link.title ? <h2 class="text-3xl p-4 pb-0 mt-2 text-center font-bold">{link.title}</h2> : null }
				<ul class="flex flex-col gap-4 p-4">
					{link.items.map((item) => (
						<li>
							<a href={item.href} target="_blank" class="text-white transition-transform dark:bg-white dark:bg-opacity-5 duration-200 ease-in-out hover:scale-[1.05] origin-center flex flex-row gap-4 p-4 rounded-lg bg-gray-900 shadow-md">
								{ item.image && <img src={item.image} alt={item.title} class="w-14 rounded-lg" /> }
								<h3 class="text-xl pt-3">{item.title}</h3>
							</a>
						</li>
					))}
				</ul>
			</section>
		))}
	</main>

</Layout>
