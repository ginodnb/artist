---
import Layout from '@layouts/Layout.astro';
import Header from '@components/Header.astro';
import { fattoRemix } from '@data/fattoRemix';
import LinkWithIconComponent from '@components/LinkWithIconComponent.astro';
---

<Layout className='text-gray-900 dark:text-white'>

    <Header />
    <div class="container max-w-[992px] mx-auto px-4 py-8 flex flex-col mb-8 gap-4">
        <img src="https://geo-media.beatport.com/image_size/1400x1400/66103f1d-bded-4257-a76d-38e26c72939c.jpg" class="w-full max-w-[450px] mx-auto rounded-lg overflow-hidden" />
        <div class="flex flex-col sm:flex-row flex-wrap justify-center gap-4 w-full mt-5">

            {
                fattoRemix.map((item) => (
                    <a
                        href={item.href}
                        class="flex flex-col gap-2 p-4 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors duration-200"
                        target="_blank"
                        rel="noopener noreferrer"
                        >
    <LinkWithIconComponent title={item.title} href={item.href} hrefLabel={item.hrefLabel} />
</a>
                    // <div class="flex flex-col gap-2 p-4 border border-gray-300 dark:border-gray-700 rounded-lg bg-white dark:bg-gray-800">
                    //     <LinkWithIconComponent title={item.title} href={item.href} hrefLabel={item.hrefLabel} />
                    // </div>
                ))
            }

        </div>
    </div>

</Layout>
